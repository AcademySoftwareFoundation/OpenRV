modes: 
  - file: stereo_disassembly.py
    menu: ''
    shortcut: ''
    event: ''
    load: immediate

description: |

  <body class="article">
  <div id="header">
  <h1>Stereo Disassembly Package (v1.1)</h1>
  </div>
  <div id="content">
  <div id="preamble">
  <div class="sectionbody">
  <style type="text/css">
      a:link {
          color: blue;
          color:#4444dd;
      }
      a:visited {
          color: darkgray;
